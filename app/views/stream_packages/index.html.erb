<p id="notice"><%= notice %></p>

<h1>Stream Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stream_packages.each do |stream_package| %>
      <tr>
        <td><%= stream_package.name %></td>
        <td><%= stream_package.cost %></td>
        <td><%= link_to 'Show', stream_package %></td>
        <td><%= link_to 'Edit', edit_stream_package_path(stream_package) %></td>
        <td><%= link_to 'Destroy', stream_package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

