-#  This file is app/views/movies/index.html.haml
%h1 Stream Packages
%p= flash[:alert] if flash[:alert]

%table#movies.ui.celled.table
  %thead
    %tr
      %th Package Name
      %th Cost ($/month)
      %th More Info
  %tbody
    %tr
      %td Hulu
      %td 50
      %td link_to "More about Hulu", stream_packages_path("Hulu")
    - @stream_packages.each do |package|
      %tr
        %td= package.name
        %td= package.cost
        %td= link_to "More about #{package.name}", stream_packages_path(package)

= link_to 'Add Stream Package', new_stream_package_path

